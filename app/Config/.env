# ROBS - Configuración de Ambiente
APP_NAME=ROBS
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Base de Datos
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=robs_db
DB_USERNAME=root
DB_PASSWORD=

# Configuración de Sesiones
SESSION_LIFETIME=480
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Configuración de Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@robs.local
MAIL_FROM_NAME=ROBS System

# Configuración de Archivos
UPLOAD_MAX_SIZE=10485760
ALLOWED_IMAGES=jpg,jpeg,png,gif,webp

# Configuración de Seguridad
ENCRYPTION_KEY=base64:YourRandomEncryptionKeyHere
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Zona Horaria
TIMEZONE=America/Mexico_City
LOCALE=es_MX

# Configuración de Logs
LOG_LEVEL=info
LOG_MAX_FILES=30

# Configuración de Caché
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configuración de Facturación (opcional)
BILLING_ENABLED=false
SAT_ENVIRONMENT=test
PAC_USERNAME=
PAC_PASSWORD=
PAC_URL=
SAT_CER_PATH=
SAT_KEY_PATH=
SAT_KEY_PASSWORD=

# APIs Externas (opcional)
UBER_EATS_API_KEY=
RAPPI_API_KEY=
DIDI_API_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# SMS (opcional)
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

# Backup
BACKUP_ENABLED=false
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30
BACKUP_CLOUD_PATH=